# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
# Service role key for admin operations (webhooks, etc.)
# Get from: Supabase Dashboard > Settings > API
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Beehiiv Configuration (for waitlist)
BEEHIIV_API_KEY=your_beehiiv_api_key
BEEHIIV_PUBLICATION_ID=your_beehiiv_publication_id

# Optional: Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=your_google_analytics_id

# PostHog Analytics (Required)
# Get your API key from: https://app.posthog.com/project/settings
NEXT_PUBLIC_POSTHOG_KEY=your_posthog_project_api_key
NEXT_PUBLIC_POSTHOG_HOST=https://us.i.posthog.com

# Optional: Error Monitoring
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn

# Upstash Redis Configuration (Required for rate limiting)
# Create a Redis database at https://console.upstash.com/
UPSTASH_REDIS_REST_URL=your_upstash_redis_rest_url
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_rest_token

# Stripe Configuration (Required for billing)
# Get your keys from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_xxx
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxx

# Stripe Webhook Secret (for webhook signature verification)
# Get this when you create a webhook endpoint in Stripe Dashboard
# Or use `stripe listen` CLI to get a local testing secret
STRIPE_WEBHOOK_SECRET=whsec_xxx

# Stripe Price IDs (create products/prices in Stripe Dashboard)
# Insiders: $9.99/month - Early adopter tier
STRIPE_PRICE_INSIDERS=price_xxx
# Pro: $29.99/month - Professional mechanics
STRIPE_PRICE_PRO=price_xxx
# Enterprise: Custom pricing - Contact sales
STRIPE_PRICE_ENTERPRISE=price_xxx